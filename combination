#include<stdio.h>/*包含两个头文件*/
#include<iostream>/*话说这是个啥子头文件*/
using namespace std;

int tot;/*定义整形变量tot*/

void f(int a[], int n, int m, int cur)/*定义返回类型为空的函数f*/
{
	
	if (cur == m - 1)/*如果cur等于m-1*/
	{
		for (int i = n; i >= 1; i--)/*执行for循环*/
		{
			tot++;/*tot自增*/
			for (int j = 0; j < cur; j++)
				cout << a[j] << " ";
			cout << i << endl;
		}/*??????????????????????????????????????????????????????????????????????????????????????????*/
	}    /*到这我正的就看不懂了*/

	for (int i = n; i >= 2; i--)
						 
	{
		a[cur] = i;/*将i的值赋值给c[cur]*/
		f(a, i - 1, m, cur + 1);
	}
}

int main()/*定义返回类型为空的主函数*/
{
	int a[100];
	int n, m;
	cout << "请输入n和k: ";
	cin >> n >> m;
	tot = 0;
	f(a, n, m, 0);
	cout << "组合数为：" << tot << endl;
	return 0;
}

